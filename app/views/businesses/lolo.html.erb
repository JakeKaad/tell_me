<div class="business_header">
  <div class="container">
    <div class="row">
      <div class="col-md-3 business_image text-center">
        <%= image_tag('lolo.jpg', class: 'img-responsive img-circle', alt: 'Business Profile Picture') %>
        <h3>House of Lolo</h3>
      </div>
      <div class="col-md-offset-1 col-md-7">
        <h2>Current Information</h2>
        <p><strong>Name:</strong> House of Lolo</p>
        <p><strong>Location:</strong> 221 NW 11th Ave, Portland, OR 97209</p>
        <p><strong>Merchandise:</strong> Fashion</p>
        <p><strong>Phone:</strong> 503.224.5240</p>
        <p><strong>Website:</strong> <a class="business_header__link" href="http://www.houseoflolo.com/">houseoflolo.com</a></p>

        <a class="btn btn-default btn-lg pull-right" href="#">Edit Information</a>
      </div>
    </div>
  </div>
</div>

<div class="business_body">
  <div class="container">
    <div class="row">
      <div class="col-md-12 business_body__header">
        <div class="row">
          <div class="col-md-3">
            <h2>count</h2>
          </div>

          <div class="col-md-offset-1 col-md-7">
            <h2>#tellMe</h2>
          </div>
        </div>
      </div>

      <!-- each of the image posts goes here -->
      <% @images.each do |image| %>
        <div class="col-md-12 business_tellme">
          <div class="row">
            <div class="col-md-3 business_tellme__number">
              <h3><%= (35...89).to_a.shuffle.pop %></h3>
            </div>
            <div class="col-md-offset-1 col-md-3">
              <%= image_tag(image.url, class:"business_tellme__img") %>
            </div>
            <div class="col-md-offset-1 col-md-4">
              <%= image.business.message %>
            </div>
            <div class="col-md-offset-1 col-md-4 business_tellme__update-message">
              <button class="btn btn-info">Update Message</button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
